<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Profile"
        android:key="pref_key_storage_settings">

        <EditTextPreference android:title= "Full Name"
        android:key="fullname"
        android:defaultValue="John Smith"
        android:summary= "Your full name"/>
        <EditTextPreference android:title="Email Address"
            android:key="email"
            android:defaultValue="jsmith@example.org"
            android:summary= "Your email address."/>
    </PreferenceCategory>

    <ListPreference android:title="Sync Frequency"
        android:summary="Select how frequently to fetch updates"
        android:key="frequency"
    android:entries="@array/frequency"
    android:entryValues="@array/frequencyValues"
    android:defaultValue="1440"/>
</PreferenceScreen>